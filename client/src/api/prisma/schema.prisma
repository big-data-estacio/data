datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bebida {
  id                Int     @id @default(autoincrement())
  nome              String
  preco             Float
  quantidade        Int
  descricao         String?
  total_vendas      Float?
  quantidade_vendas Int?
}

model Cadastro {
  id    Int     @id @default(autoincrement())
  nome  String?
  email String  @unique
  login String  @unique
  senha String
}

model EstoqueMercadorias {
  id         Int    @id @default(autoincrement())
  nome       String
  quantidade Int
}

model Funcionarios {
  id              Int    @id @default(autoincrement())
  nome            String
  cargo           String
  especialidade   String
  salario         Float
  diasTrabalhados Int
  salarioDia      Float
}

model PrevisaoVendas {
  id          Int      @id @default(autoincrement())
  data        DateTime
  totalVendas Float
}

model Pratos {
  id             Int     @id @default(autoincrement())
  nome           String
  preco          Float
  acompanhamento String?
}

model Reservas {
  id           Int      @id @default(autoincrement())
  nome         String
  data         DateTime
  reservasData Int
}

model TotalClientes {
  id    Int    @id @default(autoincrement())
  nome  String
  gasto Float
}

model VendasCategorias {
  id         Int    @id @default(autoincrement())
  categoria  String
  vendas     Int
  precoMedio Float
}
